<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeKoelkast.RegistrationPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="wallpaperapp.jpg">

    <VerticalStackLayout
        Padding="30"
        Spacing="25">

        <Label
            HorizontalOptions="Center"
            TextColor="Black"
            Text="Registrate"/>

        <Entry
            x:Name="UsernameRegistrationEntry"
            Text="{Binding CurrentUser.Username}"
            TextColor="Black"
            HorizontalTextAlignment="Center"
            Placeholder="Username"/>

        <Entry
            x:Name="PasswordRegistrationEntry"
            Text="{Binding CurrentUser.Password}"
            TextColor="Black"
            HorizontalTextAlignment="Center"
            Placeholder="Password"/>

        <Button
            x:Name="RegistrationButton"
            Clicked="RegistrationButton_Clicked"
            Command="{Binding AddOrUpdateCommand}"
            BackgroundColor="LightBlue"
            Text="Registrate"
            WidthRequest="180"
            HeightRequest="60"/>

        <Button
            x:Name="LoginPageButton"
            Clicked="LoginPageButton_Clicked"
            HorizontalOptions="Center"/>

    </VerticalStackLayout>

</ContentPage>